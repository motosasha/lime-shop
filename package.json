{
  "name": "Coders-start-project",
  "version": "1.0.0",
  "description": "Start kit for HTML/CSS/JS pages layout.",
  "author": "Alexander Motorygin",
  "license": "WTFPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/motosasha/builder"
  },
  "type": "module",
  "scripts": {
    "test": "npm run test:pug && npm run test:style && npm run test:js",
    "test:pug": "glob-exec \"src/**/*.pug\" -- \"pug-lint {{files.join(' ')}}\"",
    "test:style": "stylelint \"src/**/*.scss\" --custom-syntax postcss-scss",
    "test:js": "eslint src/blocks/**/*.js src/js/**/*.js",
    "start": "gulp",
    "wlib": "cross-env BUILD_LIBRARY=true gulp",
    "build": "cross-env MODE=production gulp build",
    "lint-staged": "lint-staged",
    "deploy": "gulp deploy"
  },
  "lint-staged": {
    "*.{js,pug,md}": "editorconfig-cli",
    "*.pug": "pug-lint",
    "*.scss": "stylelint --custom-syntax postcss-scss",
    "*.js": "eslint"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^8.3.0",
    "browser-sync": "^2.27.10",
    "cpy": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-mqpacker": "^7.0.0",
    "del": "^7.0.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "get-classes-from-html": "^1.0.1",
    "gh-pages": "^4.0.0",
    "glob-exec": "^0.1.1",
    "gulp": "^4.0.2",
    "gulp-cheerio": "^1.0.0",
    "gulp-csso": "^4.0.1",
    "gulp-debug": "^4.0.0",
    "gulp-json-concat": "^0.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-pretty-html": "^2.0.10",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgmin": "^4.1.0",
    "gulp-svgstore": "^9.0.0",
    "gulp-uglify-es": "^3.0.0",
    "husky": "^8.0.2",
    "jstransformer-markdown-it": "^3.0.0",
    "lint-staged": "^13.1.0",
    "mkdirp": "^1.0.4",
    "path": "^0.12.7",
    "postcss": "^8.4.19",
    "postcss-import": "^15.1.0",
    "postcss-scss": "^4.0.6",
    "prettier": "2.8.1",
    "pug-lint": "^2.6.0",
    "sass": "^1.56.1",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-order": "^5.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.3.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "through2": "^4.0.2",
    "webpack": "^5.75.0",
    "webpack-stream": "^6.1.2"
  },
  "dependencies": {
    "autosize": "^5.0.2",
    "baron": "^3.0.3",
    "sanitize.css": "^13.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  }
}
